<h1>Listing schedules</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Weekday</th>
    <th>Start</th>
    <th>End</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @schedules.each do |schedule| %>
  <tr>
    <td><%= schedule.title %></td>
    <td><%= schedule.weekday %></td>
    <td><%= schedule.start %></td>
    <td><%= schedule.end %></td>
    <td><%= link_to 'Show', [schedule.coach, schedule] %></td>
    <td><%= link_to 'Edit', edit_coach_schedule_path(schedule.coach, schedule) %></td>
    <td><%= link_to 'Destroy', [schedule.coach, schedule], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

